<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.ControllerImpl">
    <TextArea fx:id="messageList" editable="false" focusTraversable="false" wrapText="true" VBox.vgrow="ALWAYS">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="5.0" />
      </VBox.margin>
      <effect>
         <InnerShadow />
      </effect>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding></TextArea>
    <TextField fx:id="newMessageField" maxHeight="1" onAction="#addNewMessage" onKeyReleased="#changeText">
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding></TextField>
    <Button fx:id="okButton" disable="true" onAction="#addNewMessage" text="Отправить">
      <VBox.margin>
         <Insets top="5.0" />
      </VBox.margin></Button>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
